@model Pizza

@{
    ViewData["Title"] = "Modifica pizza";
    var pizza = Model;
}

<h2>Modifica pizza</h2>

<form method="post" asp-action="Update" asp-controller="Pizza" asp-route-id="@pizza.Id">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descrizione">Descrizione:</label>
        <textarea asp-for="Descrizione" class="form-control"></textarea>
        <span asp-validation-for="Descrizione" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prezzo">Prezzo:</label>
        <input type="number" step="0.5" asp-for="Prezzo" class="form-control" />
        <span asp-validation-for="Prezzo" class="text-danger"></span>
    </div>

    <div class="text-center my-3">
        <button type="submit" class="btn btn-primary">Modifica</button>
    </div>
</form>

